<div class="movie-thumbnails col-md-3 col-sm-6 col-xs-12">
    <img src="[@poster]" alt="[@title]" title="[@title]">
    <h2>[@title]</h2>
    <p>
        <span class="movie-thumbnails-gender">[@gender]</span>
        <span class="movie-thumbnails-time">[@time]</span>
    </p>
    <span class="rating" data-rating-id="[@id]" data-rating-val="[@rating]">
        <input class="star" type="radio" name="star-[@id]" id="star-1-[@id]" value="1"><label for="star-1-[@id]">1</label>
        <input class="star" type="radio" name="star-[@id]" id="star-2-[@id]" value="2"><label for="star-2-[@id]">2</label>
        <input class="star" type="radio" name="star-[@id]" id="star-3-[@id]" value="3"><label for="star-3-[@id]">3</label>
        <input class="star" type="radio" name="star-[@id]" id="star-4-[@id]" value="4"><label for="star-4-[@id]">4</label>
        <input class="star" type="radio" name="star-[@id]" id="star-5-[@id]" value="5"><label for="star-5-[@id]">5</label>
    </span>
</div>